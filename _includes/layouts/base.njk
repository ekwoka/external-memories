<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <!-- AlpineJS -->
    <script type="text/javascript" src="{{ '/static/js/alpine.js' | url }}" defer></script>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" type="text/css" href="{{ '/css/style.css' | url }}"/>

    <!-- Feeds -->
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <!-- Legacy CSS -->
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}" />
    <noscript><link rel="stylesheet" href="{{ '/css/noscript.css' | url }}" /></noscript>

    <!-- Legacy Scripts -->
    <script type="text/javascript" src="{{ '/static/js/jquery.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/jquery.scrollex.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/jquery.scrolly.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/browser.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/breakpoints.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/util.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/main.js' | url }}" defer></script>

    <!-- AlpineJS -->
    <script type="text/javascript" src="{{ '/static/js/alpine.js' | url }}" defer></script>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" type="text/css" href="{{ '/css/style.css' | url }}"/>

    <!-- Alpine Data -->
    <script>
      function alpineData() {
        return {
          introShow: false
        }
      };
    </script>
  </head>
  <body class="is-preload" x-data="alpineData()">

		<!-- Wrapper -->
		<div>

      {%- if page.url == '/' %}
			  <!-- Intro -->
			  <div 
          id="" 
          class="px-8 pt-12 pb-4 text-white items-center flex flex-col justify-end relative cursor-default text-center min-h-screen md:px-16 md:pt-16 md:pb-8 lg:pt-32 lg:pb-36"
          x-show="introShow"
          x-transition:enter="transition duration-1000 transform ease-linear"
          x-transition:enter-start="opacity-0">
			  	<h1 class="text-white text-6xl">This is<br />
			  		External Memories</h1>
			  	<p class="text-white">This is a blog or portfolio or thing. I don't know.</p>
			  	<ul class="actions">
			  		<li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
			  	</ul>
			  </div>
      {%- endif -%}

			<!-- Header -->
			<header id="header" class="text-white items-center flex flex-col justify-end pointer-events-none select-none h-64 pb-32 relative text-center">
				<a href="index.html" class="logo" @click.prevent="introShow = !introShow">{{ title or metadata.title }}</a>
			</header>

      <!-- Nav -->
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ -#}
			<nav id="nav" class="clamp-main">
				<ul class="links">
          {%- for entry in collections.all | eleventyNavigation %}
            <li {%- if entry.url == page.url %} class="active"{%- endif -%}><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
          {%- endfor %}
				</ul>
				<ul class="icons">
					<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
					<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
					<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="#" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
				</ul>
			</nav>


      <!-- Main -->
			<div class="bg-white relative max-w-6xl mx-auto my-0 clamp-main px-4 pt-6 pb-24 md:px-12" >
        {{ content | safe }}
      </div>


      <footer></footer>

      <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>
