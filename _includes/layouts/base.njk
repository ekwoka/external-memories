<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}" />
    <noscript><link rel="stylesheet" href="{{ '/css/noscript.css' | url }}" /></noscript>

    <!-- Scripts -->
    <script type="text/javascript" src="{{ '/static/js/jquery.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/jquery.scrollex.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/jquery.scrolly.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/browser.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/breakpoints.min.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/util.js' | url }}" defer></script>
		<script type="text/javascript" src="{{ '/static/js/main.js' | url }}" defer></script>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" type="text/css" href="{{ '/css/style.css' | url }}"/>
    <!-- Tailwind CSS -->
    <link rel="stylesheet" type="text/css" href="{{ '/css/tailwind.css' | url }}"/>
  </head>
  <body class="is-preload">

		<!-- Wrapper -->
		<div id="wrapper" class="fade-in">

      {%- if page.url == '/' %}
			  <!-- Intro -->
			  <div id="intro" class="px-8 pt-12 pb-4 text-white items-center flex flex-col justify-end relative cursor-default text-center min-h-screen md:px-16 md:pt-16 md:pb-8 lg:pt-32 lg:pb-24">
			  	<h1>This is<br />
			  		External Memories</h1>
			  	<p>A free, fully responsive HTML5 + CSS3 site template designed by <a href="https://twitter.com/ajlkn">@ajlkn</a> for <a href="https://html5up.net">HTML5 UP</a><br />
			  		and released for free under the <a href="https://html5up.net/license">Creative Commons license</a>.</p>
			  	<ul class="actions">
			  		<li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
			  	</ul>
			  </div>
      {%- endif -%}

			<!-- Header -->
			<header id="header" class="text-white items-center flex flex-col justify-end pointer-events-none select-none h-64 pb-32 relative text-center">
				<a href="index.html" class="logo">{{ title or metadata.title }}</a>
			</header>

      <!-- Nav -->
      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ -#}
			<nav id="nav">
				<ul class="links">
          {%- for entry in collections.all | eleventyNavigation %}
            <li {%- if entry.url == page.url %} class="active"{%- endif -%}><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
          {%- endfor %}
				</ul>
				<ul class="icons">
					<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
					<li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
					<li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
					<li><a href="#" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
				</ul>
			</nav>


      <!-- Main -->
			<div id="main">
        {{ content | safe }}
      </div>


      <footer></footer>

      <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>
